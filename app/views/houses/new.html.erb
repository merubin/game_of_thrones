<h1> Enter a new Post </h1>


<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :article %><br>
    <%= f.text_area :article %>
  </p>

  <p>
    <%= f.label :author_id %><br>
    <%= f.number_field :author_id %>
  </p>

  <p>
    <%= f.label :comments_enabled %><br>
    <%= f.check_box :comments_enabled%>
  </p>

  <p>
    <%= f.label :date_published %><br>
    <%= f.datetime_local_field :date_published%>
  </p>

  <p>
    <%= f.label :banner_url %><br>
    <%= f.url_field :banner_url%>
  </p>

  <p>
    <%= f.label :views %><br>
    <%= f.number_field:views%>
  </p>

  <p>
    <%= f.label :enabled %><br>
    <%= f.check_box :enabled %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
